{
  "name": "Twittyle",
  "version": "1.0.0",
  "manifest_version": 1,
  "description": "Razzle dazzle for Twitter",

  "content_scripts": [
    {
      "matches": [".+://twitter.com/.+"],
      "css": ["override.css"],
      "js": ["override.js"]
    }
  ],

  "page_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },

  "permissions": ["activeTab", "declarativeContent", "tabs"]
}
